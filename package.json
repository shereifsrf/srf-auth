{
  "name": "@shereifsrf/srf-auth",
  "version": "0.1.0",
  "private": true,
  "description": "Reusable authentication library for Next.js applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./nextjs": {
      "types": "./dist/nextjs.d.ts",
      "import": "./dist/nextjs.mjs",
      "require": "./dist/nextjs.js"
    },
    "./components": {
      "types": "./dist/components.d.ts",
      "import": "./dist/components.mjs",
      "require": "./dist/components.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.mjs",
      "require": "./dist/hooks.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.js"
    },
    "./database": {
      "types": "./dist/database.d.ts",
      "import": "./dist/database.mjs",
      "require": "./dist/database.js"
    },
    "./styles/base.css": "./dist/styles/base.css"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "ladle serve",
    "ladle": "ladle serve",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "bcryptjs": "^2.4.3",
    "lucide-react": "^0.312.0",
    "mongoose": "^8.1.1",
    "next-auth": "5.0.0-beta.30",
    "react-hook-form": "^7.50.0",
    "resend": "^3.1.0",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "daisyui": "^5.0.0",
    "next": "^13.0.0 || ^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@ladle/react": "^4.0.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.23",
    "daisyui": "^5.5.14",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "auth",
    "authentication",
    "nextauth",
    "authjs",
    "next.js",
    "react",
    "typescript",
    "oauth",
    "email-verification",
    "password-reset"
  ],
  "author": "shereifsrf",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shereifsrf/srf-auth"
  }
}
